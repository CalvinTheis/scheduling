<main role="main" class="w-full pt-1 px-2">
  <h1 class="text-4xl font-bold text-center">Work Orders Schedule</h1>
  <div class="schedule mt-4 mb-4">
    <div class="schedule-timeline">
      <div class="schedule-spacer"></div>
      <% @start_time.step(@end_time, 30*60) do |time| %>
        <div class="schedule-marker"><%= format_time time %></div>
      <% end %>
    </div>

    <div class="schedule-columns">
      <% @technicians.each do |technician| %>
        <div class="schedule-column">
          <div class="schedule-column-header">
            <%= technician.name %>
          </div>

          <div class="schedule-events">
            <div class="schedule-event">
              <p class="schedule-event-location-name">Location Name</p>
              <p class="schedule-event-location-city">City</p>
              <p class="schedule-event-start-time">Start Time</p>
              <p class="schedule-event-price">Price</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
